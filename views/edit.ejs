<div id="editkaro">
  <h1>Edit profile</h1>
  <div id="editimgdiv">
    <img src="../images/allposts/<%= loggedinuser.image %>" alt="" />
    <div id="editimgdiv-2">
      <h3>@ <%= loggedinuser.username%></h3>
      <h4 id="hoa">Edit Profile</h4>
    </div>
    <form
      action="/uploadpic"
      method="post"
      enctype="multipart/form-data"
      id="form1"
      style="display: none"
    >
      <input type="file" name="pic" id="changedp" />
    </form>
  </div>
  <form action="/edit" method="post" id="form2">
    <div id="editdiv">
      <h3>Username</h3>
      <input
        type="text"
        name="username"
        id="username"
        value="<%=loggedinuser.username%>"
      />
    </div>
    <div id="editdiv">
      <h3>Name</h3>
      <input type="text" name="name" id="" value="<%=loggedinuser.name%>" />
    </div>
    <div id="editdiv">
      <h3>Email</h3>
      <input type="email" name="email" id="" value="<%=loggedinuser.email%>" />
    </div>
    <div id="editdiv">
      <h3>Bio</h3>
      <input
        type="text"
        name="bio"
        id="biolikho"
        style="height: 10vh"
        value="<%=loggedinuser.bio%>"
      />
    </div>
    <input id="eds" type="submit" value="Submit" />
  </form>
</div>

